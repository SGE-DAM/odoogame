      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    -->

    <!-- Top menu item -->

    <menuitem name="Game" id="game.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Admin Game" id="game.menu_1" parent="game.menu_root"/>

    <!-- actions -->

    <menuitem name="Players" id="game.menu_1_list" parent="game.menu_1"
              action="game.player_action_window"/>
    <menuitem name="Fortress" id="game.menu_2_list" parent="game.menu_1"
              action="game.fortress_action_window"/>

  </data>
</odoo>